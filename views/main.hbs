   <main>

      <div class="album py-5">
        <div class="container">
    
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            {{#each interestProf}}
            <div class="col">
              <div class="card shadow-sm">
                <img width="100%" height="225" src={{this.image}}></img>
                <div class="card-body">
                  <p class="card-text"><h4>{{this.name}}</h4></p>
                  <p class="card-text">Сфера: {{this.sphere}}</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <form action='/post/{{this._id}}' method="GET">
                        <button class="btn btn-sm btn-outline-secondary">Смотреть</button>  
                      </form>
                    </div>
                    {{!-- <small class="text-muted">9 mins</small> --}}
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
      </div>
    
    </main>
    

