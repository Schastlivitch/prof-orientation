
<div class="container h-100">
  <div class="album py-5">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      {{#each profCards}}
      <div class="col">
        <div class="card shadow-sm">
          <img width="100%" height="225" src={{this.image}}></img>
          <div class="card-body">
            <p class="card-text">{{this.name}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <form class="btn-group" action='/post/{{this._id}}' method="GET">
                <button class="btn btn-sm btn-outline-secondary">Смотреть</button>
              </form>
              <small class="text-muted">{{this.sphere}}</small>
            </div>
          </div>
        </div>
      </div>
      {{/each}}


    </div>
  </div>
</div>

